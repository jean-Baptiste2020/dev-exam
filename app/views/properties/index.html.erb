<div class="container">
  <h1>物件一覧</h1>
  <table>
    <tr>
      <th>物件名</th>
      <th>賃料</th>
      <th>住所</th>
      <th>築年数</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  <% @properties.each do |property| %>
    <tr>
      <td><%= property.property_name %></td>
      <td><%= "#{property.rent.to_s(:delimited)}円" %></td>
      <td><%= property.address %></td>
      <td><%= "#{property.age}Year" %></td>
      <td><%= property.note %></td>
      <td><%= link_to 'detail', property_path(property.id) %></td>
      <td><%= link_to 'edit', edit_property_path(property.id) %></td>
      <td>
        <%= link_to 'delete', property_path(property.id), method: :delete, data: { confirm: '本当に削除してよろしいですか？' } %>
      </td>
    </tr>
  <% end %>
  </table>
  <br><br>
  <%= link_to 'Register property', new_property_path %>
</div>
